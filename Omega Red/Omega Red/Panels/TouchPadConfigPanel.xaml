<UserControl x:Class="Omega_Red.Panels.TouchPadConfigPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Omega_Red.Panels"
             xmlns:p="clr-namespace:Omega_Red.Properties"
             mc:Ignorable="d" 
             Margin="5"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <CheckBox IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=IsVisualVibrationEnabled, Mode=TwoWay}" VerticalContentAlignment="Center">
            <TextBlock Text="{DynamicResource VisualVibrationIsEnabledTitle}" />
        </CheckBox>
    </StackPanel>
</UserControl>
