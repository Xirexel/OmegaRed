<UserControl x:Class="Omega_Red.Panels.TipInfoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Omega_Red.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="5">
        <TextBlock x:Name="m_TipInfoTitleTextBlock" TextWrapping="Wrap" Foreground="{DynamicResource MainForegroundBrush}"/>
        <TextBlock x:Name="m_TipInfoTextBlock" TextWrapping="Wrap" Foreground="{DynamicResource MainForegroundBrush}"/>
    </StackPanel>
</UserControl>
