<Application x:Class="Omega_Red.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Exit="Application_Exit"  >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="mColourSchemes" Source="ColourSchemes/Default.xaml"/>
                <ResourceDictionary x:Name="mStyles" Source="Styles/Styles.xaml"/>
                <ResourceDictionary x:Name="mCaptions" Source="Captions/BaseCaptions.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
