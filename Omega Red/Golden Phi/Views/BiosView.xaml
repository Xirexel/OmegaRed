<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:p="clr-namespace:Golden_Phi.Properties">

    <UserControl x:Key="BiosView">
        <Viewbox>
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" FontSize="42" FontWeight="Bold" Foreground="White" Text="{DynamicResource BiosChooseTitle}"/>
                <Grid Width="1100" Height="600">
                    <ListView BorderThickness="0"
                  VerticalAlignment="Stretch"
                  Style="{DynamicResource TileInfoListView}" />
                    <Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="30" Style="{DynamicResource AddBtn}"/>
                </Grid>
            </StackPanel>
        </Viewbox>
    </UserControl>

</ResourceDictionary>