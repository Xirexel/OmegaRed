        <Setter Property="Command" Value="{Binding QuickSaveCommand}" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="1" Color="{DynamicResource QuickSaveDropShadowColor}"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center" Height="95" Width="156" Stretch="Fill">
                            <Path Fill="{TemplateBinding Background}"
                          StrokeThickness="1"
                          Stroke="Transparent"
                          Style="{DynamicResource MainBorderPath}"/>
